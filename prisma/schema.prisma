generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Roles {

  id          String   @unique @default(uuid())
  name        String
  description String
  createAt    DateTime @default(now())
  Users       Users[]
}

model Users {
  id            String   @id @default(uuid())
  username      String
  password      String
  email         String   @unique
  role_id       String?
  role          Roles?   @relation(fields: [role_id], references: [id])
  phone         String
  street        String
  country       String
  nationality   String
  state         String
  city          String
  postal_code   String
  gender        String
  date_of_birth String
  languages     String
  createdAt     DateTime @default(now())
  updateAt      DateTime @updatedAt
}

